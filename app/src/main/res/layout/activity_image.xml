<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="252dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ingenieria_en_sistemas_umg___copia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="147dp"
        android:layout_height="151dp"
        app:srcCompat="@drawable/_26777"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="170dp" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/android_studio_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="270dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="70dp" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="214dp"
        android:layout_height="166dp"
        app:srcCompat="@drawable/logo_android_1024x640"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="98dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="120dp" />

    <TextView
        android:id="@+id/tvExpresion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="120dp"
        android:text="@string/tvExpresion"
        android:textColor="#00BCD4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAnterior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="98dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>